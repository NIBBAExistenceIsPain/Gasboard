<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameField"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hundreds"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/decimals"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/hundreds"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ten"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/single"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hundred"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/ten"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thousand"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/hundred"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point"
        android:layout_width="29dp"
        android:layout_height="70dp"
        android:text=":"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/decimals"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>